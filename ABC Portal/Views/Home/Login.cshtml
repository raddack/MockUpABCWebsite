@model ABC_Portal.Models.ABCUser

@{
    ViewBag.Title = "Login";
    Layout = null;
}


    @*<link rel="stylesheet" href="~/LoginHelper/reset.min.css">*@
    <style>

        .editor-label {
            display: block;
            width: 100%;
            font-size: 12pt;
            padding: 0.5rem 1rem;
            box-shadow: none;
            border-color: #ccc;
            border-width: 0 0 2px 0;
        }
        * {
            -moz-box-sizing: border-box;
            box-sizing: border-box;
        }

        body {
            background: url("../../Business-Handshake.jpg");
            background-size:cover;
            font: 100%/1 "Helvetica Neue", Arial, sans-serif;
        }

        .footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            color: white;
            text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;
            text-align: center;
            margin-bottom: 2rem;
        }

        .login {
            position: absolute;
            top: 40%;
            left: 40%;
            margin: -10rem 0 0 -10rem;
            width: 40rem;
            height: 40rem;
            padding: 20px;
            background: #fff;
            border-radius: 5px;
            overflow: hidden;
        }

            .login:hover > .login-header, .login.focused > .login-header {
                width: 2rem;
            }

                .login:hover > .login-header > .text, .login.focused > .login-header > .text {
                    font-size: 1rem;
                    transform: rotate(-90deg);
                }

            /*.login.loading > .login-header {
                width: 20rem;
            }*/

                /*.login.loading > .login-header > .text {
                    display: none;
                }

                .login.loading > .login-header > .loader {
                    display: block;
                }*/

        .login-header {
            position: absolute;
            left: 0;
            top: 0;
            z-index: 1;
            width: 40rem;
            height: 40rem;
            background: url(../../0.png);
            background-size: cover;
            transition: width 0.5s ease-in-out;
        }

            .login-header > .text {
                display: block;
                width: 100%;
                height: 100%;
                font-size: 7rem;
                text-align: center;
                line-height: 40rem;
                color: white;
                text-shadow: black 0.1em 0.1em 0.2em;
                text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;
                transition: all 0.5s ease-in-out;
            }
            .login-header > .loader {
                display: none;
                position: absolute;
                left: 5rem;
                top: 5rem;
                width: 20rem;
                height: 200rem;
                border: 2px solid #fff;
                border-radius: 50%;
                animation: loading 2s linear infinite;
            }
           

                .login-header > .loader:after {
                    content: "";
                    position: absolute;
                    left: 4.5rem;
                    top: -0.5rem;
                    width: 1rem;
                    height: 1rem;
                    background: #fff;
                    border-radius: 50%;
                    border-right: 2px solid green;
                }

                .login-header > .loader:before {
                    content: "";
                    position: absolute;
                    left: 4rem;
                    top: -0.5rem;
                    width: 0;
                    height: 0;
                    border-right: 1rem solid #fff;
                    border-top: 0.5rem solid transparent;
                    border-bottom: 0.5rem solid transparent;
                }


        .login-form {
            margin: 0 0 0 2rem;
            padding: 0.5rem;
        }

        .login-input {
            display: block;
            width: 100%;
            font-size: 2rem;
            padding: 0.5rem 1rem;
            box-shadow: none;
            border-color: #ccc;
            border-width: 0 0 2px 0;
        }

            .login-input + .login-input {
                margin: 10px 0 0;
            }

            .login-input:focus {
                outline: none;
                border-bottom-color: green;
            }

        .login-btn {
            position: absolute;
            right: 1rem;
            bottom: 1rem;
            width: 5rem;
            height: 5rem;
            border: none;
            background: green;
            border-radius: 50%;
            font-size: 0;
            border: 0.6rem solid transparent;
            transition: all 0.3s ease-in-out;
        }

            .login-btn:after {
                content: "";
                position: absolute;
                left: 1rem;
                top: 0.8rem;
                width: 0;
                height: 0;
                border-left: 2.4rem solid #fff;
                border-top: 1.2rem solid transparent;
                border-bottom: 1.2rem solid transparent;
                transition: border 0.3s ease-in-out 0s;
            }

            .login-btn:hover, .login-btn:focus, .login-btn:active {
                background: #fff;
                border-color: green;
                outline: none;
            }

                .login-btn:hover:after, .login-btn:focus:after, .login-btn:active:after {
                    border-left-color: green;
                }
    </style>

<body>

    <div class="login">
        <header class="login-header"><span class="text">LOGIN</span></header>
        @using (Html.BeginForm("login", "Home"))
        {


            @*<input class="login-input" type="text" placeholder="Username" name="UserName" />*@
            <div>
                @Html.LabelFor(u => u.UserName, new { @class = "login-input" })
                @Html.TextBoxFor(m => m.UserName, new { @class = "login-input", @placeholder = "Username" })
            </div>
            @Html.ValidationMessageFor(u => u.UserName)

            @*<input class="login-input" type="password" placeholder="Password" name="Password" />*@
            @Html.LabelFor(u => u.Password, new { @class = "login-input" })
            @Html.PasswordFor(u => u.Password, new { @class = "login-input", @placeholder = "Password" })
            @Html.ValidationMessageFor(u => u.Password)
            <div class = "editor-label" >
                @Html.CheckBoxFor(u => u.RememberMe)
                @Html.LabelFor(u => u.RememberMe)
            </div>


            <button class="login-btn" type="submit">login</button>





        }
    </div>
   
    
    
    <div class="footer">
        <p>this is multiline
        paragraph</p>
        <p></p>
    </div>

</body>

